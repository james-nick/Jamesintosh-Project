<!DOCTYPE html>
<html>
<head>
    <title>FakeMac OS HTA Version</title>
    <HTA:APPLICATION 
        ID="FakeMacOS"
        APPLICATIONNAME="FakeMac OS"
        BORDER="none"
        BORDERSTYLE="normal"
        CAPTION="yes"
        ICON=""
        MAXIMIZEBUTTON="yes"
        MINIMIZEBUTTON="yes"
        SHOWINTASKBAR="yes"
        SINGLEINSTANCE="yes"
        SYSMENU="yes"
        VERSION="0.02"
        WINDOWSTATE="normal"
    />
    <style type="text/css">
        body {
            background-color: #d0d0d0;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            overflow: hidden;
        }
        .menu-bar {
            background-color: #cccccc;
            height: 30px;
            line-height: 30px;
            padding-left: 10px;
            font-weight: bold;
            color: #333;
            border-bottom: 1px solid #999;
            position: relative;
        }
        .clock {
            position: absolute;
            right: 10px;
            top: 0;
            height: 30px;
            line-height: 30px;
        }
        .desktop {
            width: 100%;
            height: calc(100% - 70px); /* minus menu and dock */
            background-color: #f5f5f5;
            position: relative;
        }
        .app-icon {
            width: 64px;
            height: 64px;
            background-color: #ddd;
            border: 1px solid #aaa;
            text-align: center;
            line-height: 64px;
            position: absolute;
            top: 50px;
            left: 50px;
            cursor: pointer;
        }
        .dock {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 40px;
            background-color: #cccccc;
            border-top: 1px solid #999;
            text-align: center;
        }
        .dock-icon {
            display: inline-block;
            width: 32px;
            height: 32px;
            margin: 4px;
            background-color: #ddd;
            border: 1px solid #aaa;
            line-height: 32px;
            vertical-align: middle;
            cursor: pointer;
        }
        .window {
            width: 300px;
            height: 200px;
            background-color: #ffffff;
            border: 2px solid #888;
            position: absolute;
            top: 100px;
            left: 100px;
            display: none;
        }
        .window-title {
            background-color: #cccccc;
            height: 25px;
            line-height: 25px;
            padding-left: 5px;
            font-weight: bold;
            cursor: move;
        }
        .window-content {
            padding: 10px;
        }
    </style>
    <script type="text/javascript">
        var isDragging = false;
        var dragOffsetX = 0;
        var dragOffsetY = 0;
        var dragWindow = null;

        function openWindow(windowId) {
            var win = document.getElementById(windowId);
            win.style.display = 'block';
        }

        function startDrag(e, id) {
            isDragging = true;
            dragWindow = document.getElementById(id);
            dragOffsetX = e.clientX - dragWindow.offsetLeft;
            dragOffsetY = e.clientY - dragWindow.offsetTop;
            document.attachEvent('onmousemove', dragMove);
            document.attachEvent('onmouseup', stopDrag);
        }

        function dragMove(e) {
            if (isDragging && dragWindow) {
                dragWindow.style.left = (e.clientX - dragOffsetX) + 'px';
                dragWindow.style.top = (e.clientY - dragOffsetY) + 'px';
            }
        }

        function stopDrag() {
            isDragging = false;
            dragWindow = null;
            document.detachEvent('onmousemove', dragMove);
            document.detachEvent('onmouseup', stopDrag);
        }

        function updateClock() {
            var now = new Date();
            var hours = now.getHours();
            var minutes = now.getMinutes();
            if (minutes < 10) {
                minutes = "0" + minutes;
            }
            document.getElementById('clock').innerText = hours + ":" + minutes;
        }

        window.onload = function() {
            updateClock();
            setInterval(updateClock, 60000); // update every minute
        }
    </script>
</head>
<body>
    <div class="menu-bar">
        FakeMac OS
        <div class="clock" id="clock"></div>
    </div>
    <div class="desktop">
        <div class="app-icon" style="left:50px;top:50px;" onclick="openWindow('finderWindow');">Finder</div>
        <div class="app-icon" style="left:130px;top:50px;" onclick="openWindow('browserWindow');">Browser</div>

        <div class="window" id="finderWindow">
            <div class="window-title" onmousedown="startDrag(event, 'finderWindow');">
                Finder
            </div>
            <div class="window-content">
                <p>Welcome to Finder!</p>
                <p>Here are your files:</p>
                <ul>
                    <li>Document.txt</li>
                    <li>Picture.jpg</li>
                    <li>Music.mp3</li>
                </ul>
            </div>
        </div>

        <div class="window" id="browserWindow">
            <div class="window-title" onmousedown="startDrag(event, 'browserWindow');">
                Browser
            </div>
            <div class="window-content">
                <p>This is a fake web browser!</p>
            </div>
        </div>
    </div>

    <div class="dock">
        <div class="dock-icon" onclick="openWindow('finderWindow');">F</div>
        <div class="dock-icon" onclick="openWindow('browserWindow');">B</div>
    </div>
</body>
</html>

<!DOCTYPE html>
<html>
<head>
    <title>FakeMac OS HTA Version</title>
    <HTA:APPLICATION 
        ID="FakeMacOS"
        APPLICATIONNAME="FakeMac OS"
        BORDER="none"
        BORDERSTYLE="normal"
        CAPTION="yes"
        ICON=""
        MAXIMIZEBUTTON="yes"
        MINIMIZEBUTTON="yes"
        SHOWINTASKBAR="yes"
        SINGLEINSTANCE="yes"
        SYSMENU="yes"
        VERSION="0.02"
        WINDOWSTATE="normal"
    />
    <style type="text/css">
        body {
            background-color: #d0d0d0;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            overflow: hidden;
        }
        .menu-bar {
            background-color: #cccccc;
            height: 30px;
            line-height: 30px;
            padding-left: 10px;
            font-weight: bold;
            color: #333;
            border-bottom: 1px solid #999;
        }
        .desktop {
            width: 100%;
            height: calc(100% - 30px);
            background-color: #f5f5f5;
            position: relative;
        }
        .app-icon {
            width: 64px;
            height: 64px;
            background-color: #ddd;
            border: 1px solid #aaa;
            text-align: center;
            line-height: 64px;
            position: absolute;
            top: 50px;
            left: 50px;
            cursor: pointer;
        }
        .window {
            width: 300px;
            height: 200px;
            background-color: #ffffff;
            border: 2px solid #888;
            position: absolute;
            top: 100px;
            left: 100px;
            display: none;
        }
        .window-title {
            background-color: #cccccc;
            height: 25px;
            line-height: 25px;
            padding-left: 5px;
            font-weight: bold;
            cursor: move;
        }
        .window-content {
            padding: 10px;
        }
    </style>
    <script type="text/javascript">
        var isDragging = false;
        var dragOffsetX = 0;
        var dragOffsetY = 0;

        function openApp() {
            var win = document.getElementById('appWindow');
            win.style.display = 'block';
        }

        function startDrag(e) {
            isDragging = true;
            var win = document.getElementById('appWindow');
            dragOffsetX = e.clientX - win.offsetLeft;
            dragOffsetY = e.clientY - win.offsetTop;
            document.attachEvent('onmousemove', dragMove);
            document.attachEvent('onmouseup', stopDrag);
        }

        function dragMove(e) {
            if (isDragging) {
                var win = document.getElementById('appWindow');
                win.style.left = (e.clientX - dragOffsetX) + 'px';
                win.style.top = (e.clientY - dragOffsetY) + 'px';
            }
        }

        function stopDrag() {
            isDragging = false;
            document.detachEvent('onmousemove', dragMove);
            document.detachEvent('onmouseup', stopDrag);
        }
    </script>
</head>
<body>
    <div class="menu-bar">
        FakeMac OS
    </div>
    <div class="desktop">
        <div class="app-icon" onclick="openApp();">App</div>

        <div class="window" id="appWindow">
            <div class="window-title" onmousedown="startDrag(event);">
                App Window
            </div>
            <div class="window-content">
                Hello! This is your app.
            </div>
        </div>
    </div>
</body>
</html>
